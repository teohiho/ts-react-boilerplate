{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2017", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		// "strict": true,
		"moduleResolution": "node",

		// If lib in node_modules has problems
		"skipLibCheck": true,
		"rootDirs": ["./"],
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"baseUrl": "./src",
		"paths": {
			"@asset/*": ["./asset/*"],
			"@nietzsche-client": ["3rd/nietzsche-client/src/index.ts"],
			"@settingConfig": ["./settingConfig.ts"]
		}
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest"
	]
}
